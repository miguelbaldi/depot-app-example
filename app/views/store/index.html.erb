<h1>Your Pragmatic Catalog</h1>
<% unless @counter < 5 %>
Hits before add something to cart: <%= @counter %>
<% end %>
<% for product in @products -%>
<div class="entry" >
	<%= link_to_remote(image_tag(product.image_url) , :url => {:action => :add_to_cart, :id => product}, :href => url_for(:action => :add_to_cart, :id => product)) %>
	<h3><%= h(product.title) %></h3>
	<%= product.description %>
	<span class="price" ><%= number_to_currency(product.price, :unit => "R$ ", :separator => ",", :delimeter => ".") %></span>
		<% form_remote_tag :url => { :action => :add_to_cart, :id => product } do %>
			<%= submit_tag "Add to Cart" %>
		<% end %>
</div>
<% end %>
